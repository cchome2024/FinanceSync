# --- Database ---
DATABASE_URL=postgresql+psycopg://finance_sync:password@localhost:5432/finance_sync

# --- Redis / Celery ---
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# --- Object Storage ---
STORAGE_PROVIDER=local
STORAGE_BUCKET=finance-sync
STORAGE_LOCAL_PATH=./storage

# --- LLM Provider ---
LLM_PROVIDER=azure_openai
LLM_ENDPOINT=https://your-azure-openai-endpoint.openai.azure.com/
LLM_DEPLOYMENT=gpt-4o-mini
LLM_API_KEY=your-api-key

# --- Directory Watcher ---
WATCH_DIRECTORIES=D:\\FinanceSync\\incoming
WATCH_POLL_INTERVAL_SECONDS=30

# --- Logging ---
LOG_LEVEL=INFO
SENTRY_DSN=

# --- Security ---
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081
SERVICE_AUTH_TOKEN=replace-with-shared-secret
